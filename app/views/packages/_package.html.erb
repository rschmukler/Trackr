<section class="entry <%= package.carrier.to_s %> ajax">
  <div class="big-effing-button-wtf">
    <h1><%= package.name[0..50] %></h1>
    <p><%= package.name %> from <span class="vendor"><%= Vendor.string_for_id(package.vendor_id) %></span> <span class="via">via</span> <span class="shipper"><%= Carrier.string_for_id(package.carrier_id )%></span> is <span class="status"><pending><%= package.status %></span>. Ship Date: <span class="date"><%= package.ship_date%></span>. Estimated Delivery: <span class="date"><%= package.estimated_delivery %></span></p>
    <div class="meta">
      <ul>
	       <li class="vendor <%= Vendor.string_for_id(package.vendor_id) %>"><%= Vendor.string_for_id(package.vendor_id) %></li>
	       <li class="shipper <%= Carrier.string_for_id(package.carrier_id )%>"><%= Carrier.string_for_id(package.carrier_id )%></li>
	      </ul>
	      <% if.pending? %><div class="pending">pending</div><% end %>
	  </div>
	</div>
	<div class="entry-tools">
	  <a class="remove-package" href="#">Remove</a>
	  <a href="#" class="refresh">Refresh</a>
	</div>
  <div class="full-info">
    
    <table class="packages-table">
      <colgroup>
        <col class="item">
        <col class="quantity">
      </colgroup>
      <tr>
        <th>Item Name</th>
        <th>Quantity</th>
      </tr>
      <%= render :partial 'item_row', :collection => package.items, :as => :item %>
    </table>
    <table>
      <colgroup>
        <col class="location">
        <col class="date">
        <col class="time">
        <col class="activity">
      </colgroup>
      <tr>
        <th>Location</th>
        <th>Date</th>
        <th>Local Time</th>
        <th>Activity</th>
      </tr>
      <%= render :partial 'event_row', :collection => event.items, :as => :event %>
    </table>
  </div>
</section>